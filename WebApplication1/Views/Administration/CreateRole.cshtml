@model RoleViewModel
@{ ViewData["Title"] = "Create Role"; }

<div class="row">
    <div class="col-sm-6">
        <img src="~/Image/SidePic.png" class="w-auto mt-4 img-fluid d-none d-lg-block d-md-none" />
    </div>
    <div class="col-lg-5">
        <div class="container justify-content-md-end mt-5">
            <form class="p-3 rounded bg-dark mt-4" method="post">


                <div class="container">
                    <div class="row">
                        <div class="col text-center">
                            <img src="~/Image/white-prof-user.png" class="w-25 text-center mb-2 " />
                        </div>
                    </div>
                </div>
                <h1 class="text-center">Create Roles</h1>
                <hr />
                <div asp-validation-summary="All" class="text-danger py-2"></div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="RoleName">Role Name</label>
                    <input class="form-control mb-6" placeholder="Role Name..." asp-for="RoleName">
                    <span class="text-danger" asp-validation-for="RoleName"></span>
                </div>
          
                <div class="container pt-3 pb-2">
                    <div class="row">
                        <div class="col text-center">
                            <button type="submit" class="btn btn-success w-50 h-100  mb-4">
                                Create Role
                            </button>

                        </div>
                       
                    </div>
                </div>


            </form>

        </div>
    </div>
</div>
