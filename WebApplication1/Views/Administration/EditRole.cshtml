@model EditRoleViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Edit Role";
}


<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="container rounded my-3 bg-dark">
            <h1 class="text-center pt-2"> Edit Roles</h1>
            <form method="post" class="mt-3 rounded">
                <div class="form-group row">
                    <label asp-for="id" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="id" disabled class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="RoleName" class="form-control">
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a asp-action="ListRoles" asp-controller="Administration" class="btn btn-primary">Cancel</a>
                    </div>
                </div>

                <div class="container-fluid">
                    <div class="row">
                        <div class="col mb-3">
                            <div class="card w-100">
                                <div class="card-header bg-success">
                                    <h3>Users in this role</h3>
                                </div>
                                <div class="card-body bg-success">
                                    @if (Model.Users.Any())
                                    {
                                        foreach (var user in Model.Users)
                                        {
                                            <h5 class="card-title">@user</h5>
                                        }
                                    }
                                    else
                                    {
                                        <h5 class="card-title">None at the moment.</h5>
                                    }
                                    <a class="btn btn-primary" asp-action="EditUsersInRole" asp-controller="Administration"
                                       asp-route-roleId="@Model.id" style="width:auto">Add/Remove Users</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        
        </form>
    </div>
    </div>
</div>
