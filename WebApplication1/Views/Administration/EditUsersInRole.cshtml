@model List<UserRoleViewModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var roleId = ViewBag.roleId;
}

<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="container rounded my-3 bg-dark">
            <h1 class="text-center pt-2"> Change User Roles</h1>
            <form method="post" class="mt-3 rounded">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col mb-3">
                            <div class="card-header bg-success">
                                <h2>Add or remove users from this role</h2>
                            </div>
                            <div class="card-body bg-success">
                                @for (int i = 0; i < Model.Count(); i++)
                                {
                                    <div class="form-check m-2">
                                        <input type="hidden" asp-for="@Model[i].UserId" />
                                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                                        <label class="form-check-label">
                                            @Model[i].UserName;
                                        </label>
                                    </div>
                                }
                            </div>
                            <div class="card-footer bg-success">
                                <input type="submit" value="Update" class="btn btn-primary" style="width: auto" />
                                <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-primary" style="width: auto">Cancel</a>
                            </div>

                            </div>
                        </div>
                    </div>
            </form>
        </div>
    </div>
</div>
