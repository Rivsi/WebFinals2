@model RegisterViewModelFinalsMP.RegisterViewModel

@{ ViewData["Title"] = "Register"; }

<div class="row">
    <div class="col-sm-6">
        <img src="~/Image/SidePic.png" class="w-auto mt-4 img-fluid d-none d-lg-block d-md-none" />
    </div>
    <div class="col-lg-5">
        <div class="container justify-content-md-end mt-5">
            <form class="p-3 rounded bg-dark mt-4" method="post">


                <div class="container">
                    <div class="row">
                        <div class="col text-center">
                            <img src="~/Image/white-prof-user.png" class="w-25 text-center mb-2 " />
                        </div>
                    </div>
                </div>
                <h1 class="text-center">Sign Up</h1>
                <hr />
                <div asp-validation-summary="All" class="text-danger py-2"></div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="Email">Email</label>
                    <input class="form-control mb-6" placeholder="Email" asp-for="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label class="col-form-label mt-2" asp-for="Password">Password</label>
                    <input class="form-control mt-1 pwd" placeholder="Password" asp-for="Password" />

                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label class="col-form-label mt-2" asp-for="ConfirmPassword">Confirm Password</label>
                    <input class="form-control mt-1 pwd" placeholder="Password" asp-for="ConfirmPassword" />
                    <div class="container pt-1 text-end">
                        <input type="checkbox" class="btnShow" value="show"> Show Password?
                    </div>
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>


                <div class="container pt-3 pb-2">
                    <div class="row">
                        <div class="col text-center">
                            <button type="submit" class="btn btn-success w-50 h-100  mb-4">
                                Sign Up
                            </button>

                        </div>
                        <a type="nav-link" class="btn btn-link text-center mt-2" asp-controller="Login" asp-action="Login">Have an account?</a>
                    </div>
                </div>


            </form>

        </div>
    </div>
</div>
